{
  "extends": "../shared/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["**/*.ts", "**/*.tsx"]
}
